<div class="row">
  <div class="text-center">
    <%= image_tag @artist.remote_image_url, class:"artist_show_images" %>
  </div>
</div>

<h2 class="text-center play_title"><%= @artist.name %>'s Play Page.</h2>

<% @songs.each do |song| %>
  <h3><%= song.title %></h3>
  <%= link_to 'Delete', artist_song_path(@artist, song), method: :delete, data: { confirm: "Are you sure you want to delete this song?" } %>
<% end %>

<%= link_to "[Add a new song to #{@artist.name}]",
new_artist_song_path(@artist) %>


<div class="container-fluid buttons_row">
  <div class="col-xs-12">
    <div class="text-center">
      <%= link_to artists_path do %>
        <i class="fa fa-arrow-circle-o-left fa-3x" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
